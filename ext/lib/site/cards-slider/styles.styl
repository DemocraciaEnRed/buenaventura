.topic-card
  cursor: pointer

.flickity-prev-next-button
  path.arrow 
    fill: $main-color
button.flickity-prev-next-button
  background: #e9e9e9
  width: 55px
  height: 55px
  &:hover
    background: #ccc
  &.previous
    left -45px
    @media (min-width: 576px)
      left -70px
  &.next
    right -45px
    @media (min-width: 576px)
      right -70px

.flickity-resize 
  .topic-card
    height: calc(100% - 55px);
  .flickity-viewport
    padding: 20px 0;
    box-sizing: content-box;
  
@import './topic-card/styles'

