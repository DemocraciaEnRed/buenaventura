/**
 * Header
 *
 * Sorry for float's and ugly stuff, we need to be sure to show the
 * header almost on any browser
 */

.header
  position: fixed
  right: 0
  left: 0
  top: 0
  height: 54px
  padding-right: 7px
  padding-left: 7px
  z-index: 1030

  &.with-contrast
    box-shadow: 0 -1px 8px rgba(#d5d5d5, .8)

  .logo
    float: left
    margin-top: 20px
    padding: 0 7px

    .logo-mobile
      display: block

    .logo-desktop
      display: none

    img
      height 30px

    @media screen and (min-width: 560px)
      .logo-mobile
        display: none

      .logo-desktop
        display: block

  .header-items
    height: 100%
    text-align: right

  .header-item
    display: inline-block
    height: 100%
    vertical-align: top

  .header-link

    [class*="icon-"]
      font-size 16px
      font-weight bold
      line-height inherit

  .notifications-link
    .header-link
      padding-left: 14px
      padding-right: 14px

  .org-link
    display: none

    @media screen and (min-width: 700px)
      display: inline-block

  #toggleButton
    display block
    float left
    background none
    border none
    color inherit
    padding .5rem 0
    margin-right 10px
    outline: none
    position: relative
    .icon-menu
      font-size 22px
    &:hover
      cursor: pointer
    &::before
      content: ""
      position: absolute
      top: 0
      left: -10px
      width: 40px
      height: 100%

    @media screen and (min-width: 700px)
      display none

@import './user-badge/styles'

/* ext */
.ext-header
  header-height = 95px

  position: relative
  padding-left: 0
  padding-right: 0
  height: header-height
  box-shadow: 0 2px 2px rgba(#000, .2)
  color: $main-color
  background-color: #fff
  background-image: linear-gradient(to right, #129959 2%, #129959 5%, #11955d 19%, #0f8c6c 35%, #0c7d84 53%, #0867a5 71%, #034ccf 90%, #003ce9)

  .header-item.active .header-link,
  .header-link:hover
    color: #fff

  .header-link
    display: inline-block
    padding-left: 15px
    padding-right: 15px
    color: white
    font-weight: 500
    font-size: 20px
    height: 40px;
    margin-top: 28px;
    line-height: 40px;
    border-radius: 20px;
    border: solid 2px #707070;
    margin-right: 30px
    &.anon-user
      padding-left: 35px
      padding-right: 35px
      color: $primary-color
      font-family: 'Dosis', sans-serif
      border: none
      border-radius: 20px
      background-image: linear-gradient(to right, #ffab5e 0%, #ffe900)
      text-transform: uppercase
      margin-right: 0
    &:focus
      outline: none

  .logo
    margin: 15px 0 0 0
    padding: 0

    img
      height: 48px
      max-width: 100%
      margin-left: -10px

    @media (min-width: 380px)

      img
        height: 60px

    @media (min-width: 480px)

      img
        height: 65px

  .dropdown-list
    position: absolute
    top: 72px
    right: 0
    color: #fff
    border: none
    width: 232px
    background-color: $main-color
    border-radius: 20px;
    overflow: hidden;

    a
      font-size: 16px
      text-align: left
      text-transform: uppercase

      &:hover
        background-color: $main-link-color

nav.navbar
  height: 72px
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2)
  .navbar-brand
    img
      height 50px
  .nav-item
    height: 72px;
    margin: -.5rem 0 0;
    &.org-link
      display: none
    .nav-link
      height: 100%
      align-items: center;
      display: flex
      font-weight 500
      font-size 17px
      padding: 0 7px
      &:hover, &:active
        background $main-color
        color #fff
        cursor: pointer
  #toggleButton
    border-radius: 4px
    padding: 9px 10px
    margin-left: -10px
    margin-right: 3px
    top: 13px
    color: #888
    &:active,&:hover
      color: #fff
      background-color: $main-color

  .user-badge
    button
      margin 0
      outline: none
    &.active
      background #0072bc
      color #fff
      button
        background none
        .caret
          color #fff
    &:hover
      button
        .caret
          color #fff
    .dropdown-list
      background #0072bc
      color #fff
      border none
      width: 232px;
      position: absolute
      top: 72px
      right: 0
      a
        text-transform uppercase
        &:hover
          background #0091ef

@media screen and (min-width: 700px)
  nav.navbar
      .nav-item
        &.org-link
          display: flex

@media (max-width: 500px)
  nav.navbar
    .nav-item
      .nav-link
        font-size 12px

@media (max-width: 470px)
  nav.navbar
    height: 64px
    .navbar-brand
      img
        height: 36px
    .nav-item
      height: 64px
    .dropdown-list
      top: 64px
    #toggleButton
      top: 5px

@media (max-width: 470px)
  nav.navbar
    padding: .5rem 0

@media (max-width: 360px)
  nav.navbar
    .navbar-brand
      margin-top: 6px
      img
        height: 28px

@media screen and (max-width: 940px)
  #toggleButton
    display block
