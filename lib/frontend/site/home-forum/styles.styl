.ext-forum-home
  background-color: #FFF
  .cover
    text-align: left
    text-transform: uppercase
    font-family: 'Dosis', sans-serif
    .jumbotron_body
      background-image: linear-gradient(to right, #ffab5e 0%, #ffe900 100%);
      min-height: 240px;
      .container
        width: 83%;
        max-width: unset;
        a.pre-link
          font-size: 22px
          color: #000
          text-decoration: none
        h1
          margin: 0 auto .3em
          font-size: 45px
          color: #000
          text-shadow: none
          text-transform: uppercase

    .btn.btn-primary
      margin-top: 3em

  .autor-container
    display: flex
    flex-direction: column
    align-items: flex-start
    margin-top: 20px

  .summary-container
    display: flex
    justify-content: center
    background-color: #FFF
    margin-top: 27px
    flex-direction: column;
    align-items: center;
    h3
      text-transform: uppercase
      font-family: 'Dosis', sans-serif
      font-size: 45px
      color: $main-color
      margin-bottom: 20px
      text-align: center;
      @media (max-width: 500px)
        font-size: 35px;
    p
      font-size: 24px
      color: #000
    @media (max-width: 768px)
      padding: 0 10px
    
  .cargar-propuesta
    text-align: center
    margin: 30px auto 40px

    h5
      font-weight: 500
      font-size: 25px
      line-height: 30px
      margin-bottom: 43px
      position: relative
      margin-top: 80px
    h5:before
      content: ''
      width: 600px
      height: 1px
      position: absolute
      border-top: 1px solid #707070
      background-color: #707070
      top: -2.5em;
      @media (max-width: 767px)
        width: 100%
        left: 0
    .btn, .btn:hover
      color: white
    

  .topics-container
    /* display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: left
    padding-top: 1.3em */
    h3
      text-align: left
      font-size: 24px
      color: #000
      font-weight: normal;

    h5
      font-weight: 500
      font-size: 25px
      line-height: 30px
      margin-bottom: 43px
      position: relative
      text-align: center
    h5:before
      content: ''
      width: 600px
      height: 1px
      position: absolute
      border-top: 1px solid #707070
      background-color: #707070
      top: -24
      left: -70
      @media (max-width: 767px)
        width: 100%
        left: 0

  .topic-card
    max-width: 100%
    width: 300px
    margin: 0 10px 20px
  
  .consulta-cerrada
    border: 1px solid $main-color
    background-color: #f0f8ff
    border-radius: 3px
    padding: 10px 30px 10px 50px
    .lock-icon
      width: 23px
      position: absolute
      left: 30px
      top: 20px
    
  .btn-informe-cierre
    padding: 12px 30px

@import './forum-description/styles.styl'
@import './forum-stats/styles.styl'