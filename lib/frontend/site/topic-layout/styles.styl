#topic-wrapper
  height inherit
  display flex

@import './sidebar/styles'
@import './topic-article/styles'

/* ext */
.ext-topic-layout
  @import './topic-article/styles.styl'
  .jumbotron_bar
    background-image: linear-gradient(to right, #ffab5e 0%, #ffe900 100%); 
    li.breadcrumb-item
      a, +.breadcrumb-item::before
        color: $main-color
        font-family: 'Dosis', sans-serif
        text-transform: uppercase
        font-size: 22px
        text-shadow: none
        font-weight: bold

  .topic-comments-form
    .actions
      .btn
        margin-bottom: 0

  .comments-sort
    .comments-sort-btn
      background-color: transparent !important

    .caret
      top: .6em
  
  .seccion-proyectos.container-fluid
    background-color: #FFF
    .title
      font-size: 30px
      font-weight: 500
      text-align: center
      margin-top: 0
      padding-top: 20px
      color: $main-color
      text-transform: uppercase
      font-family: 'Dosis', sans-serif
    .topics-container
      padding-bottom: 80px;

.jumboarticle
  min-height:500px
  
li.sortable-li.sortable-li-focus
  line-height:inherit