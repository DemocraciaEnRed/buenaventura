/* Vars
-------------------------------------------------- */
border_radius = 3px
/* Topic options view
-------------------------------------------------- */
.proposal-options
  position relative
  margin-bottom 2em
  .alert
    margin 20px 0 10px
  .vote-options
    display: flex;
    flex-direction: column
    .proxy-vote
      display inline-block
    .vote-option
      display inline-block
      width 30%
      font-size 14px
      text-align center
      margin-right 5%
      color white
      text-transform uppercase
      font-weight bold
      border-radius border_radius
      padding 14px
      line-height 1.1
      -webkit-transition all 0.3s ease
      i
        display inline-block
        margin-right 8px
      span
        display inline-block
      &.vote-yes
        background-color #a4cb53
        &:hover
          background-color darken(#a4cb53, 40%)
      &.vote-no
        background-color #d95e59
        margin-right 0
        &:hover
          background-color darken(#d95e59, 40%)
      &.vote-abstain
        background-color #666
        &:hover
          background-color darken(#666666, 40%)
      &.delegate-vote
        background-color #3498db

    @media screen and (max-width: 800px) and (min-width: 700px)
      .vote-option
        display block
        width 100%
        margin 10px 0 0 0
    @media screen and (max-width: 530px)
      .vote-option
        display block
        width 100%
        margin 10px 0 0 0

  .change-vote
    background none
    border none
    font-size 16px
    color black
    font-weight bold
    margin-bottom 10px
    display block
    i
      margin-right 7px
      position relative;
      top 2px
      font-size 13px
    &:hover
      text-decoration none
  .vote-box, .results-box
    padding 20px 0
    h5
      text-transform uppercase
      margin-top 0
      color: $main-link-color
      font-family: 'Dosis', sans-serif
      display: inline-block
      font-size: 18px
    .delegation-box
      display inline-block
  .vote-box
    #voting-error
      color: black
    .meta-data
      margin-bottom 20px
    .secret-results
      margin-right 6px
    .secret-results:before
      content " - "

  .toggle-results
    span
      margin-right 5px

  .results-box
    box-sizing border-box
    width 100%
    margin 0
    padding-top 10
    h5
      margin-bottom 0
    .percent
      font-size 30px
    .votes
      margin-left 10px
    .votes-results
      margin-bottom 20px
    .results-summary
      font-weight bold
    .vote-yes, .vote-yes h5
      color #a4cb53
    .vote-abstain, .vote-abstain h5
      color #666666
    .vote-no, .vote-no h5
      color #d95e59

  .voted-box
    .alert-voted 
      display: flex
      justify-content: center
      align-items: center
      
      .bold 
        font-weight: bold
      
      .black 
        color: #000
      
      .thanks 
        margin: 0 10px
    
    .chosen-answer
      text-align: center

  .result-wrapper
    .chosen-answer
      text-align: center
      margin-bottom: 0

.topic-action-title
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  cursor: default;
  margin: 25px 70px;
  p
    line-height: 1.2
    font-size: 16px
.icon-wrapper
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.32);
  background-color: #f4f4ef;
  width: 110px
  height: 110px
  border-radius: 100%
  display: inline-flex;
  justify-content: center;
  margin-right: 20px;
  img 
    max-width: 60px
    
