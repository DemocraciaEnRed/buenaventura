.topic-article-header
  position relative
  padding-top:0
  &.isclosed
    padding-top:7px

  h1
    font-size 45px
    color: $main-color
    font-family: 'Dosis', sans-serif
    margin 0.2em 0 0.6em 0
    text-transform: uppercase

  h4
    text-align center
    margin 35px 0 0 0
    text-transform uppercase
    font-size 11px

  h2.author
    color #000
    font-family: Roboto;
    font-style: italic;
    font-size 24px
    font-weight 300
    margin 0 0 1em 0
    text-transform: uppercase

  .meta-information
    margin-bottom 0px
    color #666
    font-size 16px

    .icon-clock
      margin-right 6px
      font-size 13px

    .meta-timeago,
    .meta-timeago-label
      display inline-block

    .label
      display inline-block
      margin-right 10px
      border-radius 0

  .topic-tags
    margin: 0 0 30px 0
    a
      background: #a5a5a5
      padding: 0px 8px 1px
      margin: 5px 5px 0 0
      display: inline-block
      border-radius: 10px
      color: #fff
      font-size: 12px
      font-weight: 400
      &:hover
        text-decoration: none
    /* ext */
    span
      background: #a5a5a5
      padding: 0px 8px 1px
      margin: 5px 5px 0 0
      display: inline-block
      border-radius: 10px
      color: #fff
      font-size: 14px
      font-weight: 400
@media screen and (max-width: 1157px)
  .entry-tag
    display none
