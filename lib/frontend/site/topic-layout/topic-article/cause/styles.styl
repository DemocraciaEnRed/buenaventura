.topics-cause
  position: relative
  margin-bottom: 20px
  z-index: 0
  .cause-title
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    cursor: default;
    p
      line-height: 1.2
      font-size: 16px
  .icon-wrapper
    box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.32);
    background-color: #f4f4ef;
    width: 110px
    height: 110px
    border-radius: 100%
    display: inline-flex;
    justify-content: center;
    margin-right: 20px;
    img 
      max-width: 60px
  h5
    text-transform uppercase
    margin-top 0
    color: $main-link-color
    font-family: 'Dosis', sans-serif
    display: inline-block
    font-size: 18px

  .btn
    width: 100%
  
  .voted-box
    .alert-voted 
      display: flex
      justify-content: center
      align-items: center
      
      .bold 
        font-weight: bold
      
      .black 
        color: #000
      
      .thanks 
        margin: 0 10px
    
    .chosen-answer
      text-align: center
