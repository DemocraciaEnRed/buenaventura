@import './forum-container/styles.styl'
@import './search/styles.styl'
@import './search/results-search/styles.styl'
@import './search/results-search/styles.styl'
@import './comunidades/styles.styl'
@import './comunidad-container/styles.styl'
  
.jumbotron_body
  background-image: unquote("url('lib/frontend/site/home-multiforum/background-waves.png')")
  padding: 50px 0 !important
  height: 100%
  display: flex
  align-items: center
  .container
    max-width: 65%
    width: auto
    .lead
      font-size:18px
      margin-top: 25px
      &.highlight
        font-size:40px
        font-weight: 400
        color: $secondary-color
        font-family 'Dosis', sans-serif
        text-transform: uppercase
        text-shadow: none !important
        line-height: 1.2
      
.ext-site-home-multiforum
  background: transparent

  .lead-paragraph
    margin-top: 45px
    text-align: center
    font-size: 20px
    padding-left: 10%;
    padding-right: 10%;
    color: #000
    p
      font-size: 24px
      line-height: 1.2
      margin: 0
    h3
      font-size: 40px
      font-family 'Dosis', sans-serif
      margin: 25px 0
      padding: 0

  .intro-plataforma
    background-image: unquote("url('lib/frontend/site/home-multiforum/background-waves-yellow.png')")
    h3
      font-family: 'Dosis', sans-serif
      font-size: 40px
      text-transform: uppercase
      margin-bottom: 20px
    p
      font-size: 20px
      line-height: 1.2
    .click
      text-transform: uppercase
      font-family: 'Dosis', sans-serif
      font-size: 18px
      color: #129959;
      display: block;
      margin-bottom: 40px
    .home-icon-action
      .icon-wrapper
        box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.32);
        background-color: #f4f4ef;
        width: 110px
        height: 110px
        border-radius: 100%
        display: inline-flex;
        justify-content: center;
        img 
          max-width: 60px
      h4
        display: block
        margin-top: 15px
        margin-bottom: 20px
        border-radius: 18px;
        background-image: linear-gradient(to right, #ffab5e 0%, #ffe900);
        width: 160px
        color: #000000
        text-transform: uppercase
        font-family: 'Dosis', sans-serif
        font-size: 26px
        line-height: 35px
        height: 35px


  .forums-list
    display: flex
    flex-direction: column
    flex-wrap: wrap
    padding-top: 1em

    .forums-list-title
      font-size: 35px
      text-align: center
      font-weight: 500
      margin-bottom: 20px

    .forums-list-item
      max-width: 100%
      width: 100%
      margin: 0 10px 20px

      @media (min-width: 992px)
        width: 440px

  .cover
    text-align: center
    height: 400px

    h1
      max-width: 500px
      margin: 0 auto .3em

  .arrow-down
    background-size: cover
    background-repeat: no-repeat
    display: inline-block
    margin-top: 0
    margin-right: 3%
    width: 70px
    height: 55px
    margin-bottom:20px
    @media screen and (max-width: 750px)
      width: 40px
      height: 30px
      margin-top:25px

  .section-icons
    font-weight:600
    margin-top:20px
    @media (max-width: 760px)
      margin-left:6%
    @media (max-width: 460px)
      margin-left:10px
    .section-icon
      display: inline-block
      @media (max-width: 760px)
        display:flex
        flex-direction:column
      width:30% !important
      .icon
        width:100px
        float: left
      .text
        padding-left: 115px
        @media (max-width: 760px)
          padding-left:10px
        padding-top: 10px
        font-weight: 100
        font-size: 14px
  
  .icon-arrow-down
    font-size: 20px
    color: $main-color
    cursor: pointer

  .content-center
    display: flex;
    align-self: center;

    .btn
    .dropdown-element
    .dropbtn
      min-width:130px
      padding: 5px 25px 5px 25px !important

    .btn-secondary
      background-color: #fff

    .btn-active
      text-underline: none
      background-color: #e9e9e9
      color: $main-color
      &:focus
        outline: none

.dropbtn
  width:150px
  font-size:16px !important
  @media (min-width: 701px)
    display:none

.dropdown-element:hover .dropdown-content
  @media (max-width: 700px)
    display: block

.dropdown-content
  @media (max-width: 700px)
    li
      display:block
      margin-bottom:0

.dropdown-content
  @media (max-width: 700px)
    display: none
    position: absolute
    z-index: 1
    left: -14px
    top: 36px

.dropdown-element
  @media (max-width: 700px)
    position: relative
    display: inline-block

.small-arrow
  font-size:9px !important

.show-more
  height: 50px



